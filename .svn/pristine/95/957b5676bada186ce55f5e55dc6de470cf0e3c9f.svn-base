		 $(".list-view .hot_search_list").eq(t).show();
		 
	  })
 });  
  
var search_type = 1;
setTab('tab',search_type,4);

function setTab(name,cursel,n){
	search_type = cursel;
	 for(i=1;i<=n;i++){
	  var menu=document.getElementById(name+i);
	  //var con=document.getElementById("con_"+name+"_"+i);
	  menu.className=i==cursel?"this":"";
	  //con.style.display=i==cursel?"block":"none";
	 }
	}
	
	
function search_submit(){
	var keyword=$("#keyword").val();

	if(!keyword)
	{
		alert("请填写搜索关键字");
	}else{
		if (search_type == 2){
			window.location.href = APP_ROOT+"/index.php?ctl=goodslist&keyword="+keyword;
		}else if (search_type ==3){
			window.location.href = APP_ROOT+"/index.php?ctl=youhuilist&keyword="+keyword;
		}else if (search_type ==4){
			window.location.href = APP_ROOT+"/index.php?ctl=merchantlist&keyword="+keyword;
		}else{
			window.location.href = APP_ROOT+"/index.php?ctl=tuanlist&keyword="+keyword;
		}
	}
}	
