<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title>首页</title>
</head>
<link rel="stylesheet" type="text/css" href="css/style.css">
<script src="js/jquery.js"></script>
<script src="js/myswipe.js"></script>
<script src="js/swipe.js"></script>
<script src="js/jqcery-mian.js"></script>
<body>
<header class="header_box">
    <ul>
        <li class="title">技师达</li>
        <li class="coordinates"><a href="{wap_url a="index" r="index2#index"}">{if $data.city_name}{$data.city_name}{else}全国{/if}<i class="fa fa-angle-down"></i></a></li>
        <li class="rightlogin">{if $user_info}<a href="index.php?ctl=user_center">{$user_info.user_name}</a>{else}<a href="index.php?ctl=login">登录</a>{/if} </li>
    </ul>
</header>
<!--banner-->
<section class="banner">
    <div id="mySwipe" class="swipe">
        <div class="swipe-wrap" >
            <div data-index="0"> <a href=""><img src="images/banle.jpg" ></a></div>
            <div data-index="1"> <a href=""><img src="images/banle.jpg"></a></div>
            <div data-index="2"> <a href=""><img src="images/banle.jpg"></a></div>
        </div>
    </div>
    <ul class="position" id="position">
        <li class=""></li>
        <li class=""></li>
        <li class=""></li>
    </ul>
</section>
<!--content-->
    <section class="content">
        <section class=" vertical-view">
            <ul>
                <li>
                    <a href="service.html">
                        <img src="images/service.png">
                        <p>预约服务</p>
                    </a>
                </li>
                <li>
                    <a href="technician.html">
                        <img src="images/technician.png">
                        <p>预约技师</p>
                    </a>
                </li>
                <li>
                    <a href="Personal.html">
                        <img src="images/personal.png">
                        <p>我的按摩</p>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img src="images/Customer-.png">
                        <p>在线客服</p>
                    </a>
                </li>
            </ul>
        </section>
        <section class=" horizontal-view">
            <ul>
                {foreach from=$data.supplier_deal_list item=supplier_deal_item name=supplier_deal_item key=key}
				{if $key<3}
				<li>
                    <a href="{wap_url a="index" r="goodsdesc#index"  p="id=$supplier_deal_item.id"}">
                        <img src="{$supplier_deal_item.img}">
                    </a>
                </li>
				{/if}
				{/foreach}
            </ul>
        </section>
        <section class="Choose_box">
            <section class="Choose">
				{foreach from=$data.allgoodslistallgoodslist item=supplier_deal_item name=supplier_deal_item key=key}
				 <a href="{wap_url a="index" r="goodsdesc#index"  p="id=$supplier_deal_item.id"}"><ul>
                    <li>
                    	<img src="{$supplier_deal_item.img}" width="140" height="85">
						<P>
							<i class="fl h3_1">{if $supplier_deal_item.sub_name}{$supplier_deal_item.sub_name}{else}{$supplier_deal_item.name}{/if}</i>
							<i class="fr red">{$supplier_deal_item.current_price}元</i>
						</P>
						<P>
							<i class="fl secon">销量：{$supplier_deal_item.buy_count}</i>
							<i class="fr secon">40分钟</i>
						</P>
						<P>
							<i class="fl secon">{$supplier_deal_item.name}</i>
							<a href="service_data.html" class="fr">预约</a>
						</P>
                    </li>
                </ul></a>
				{/foreach}
            </section>
        </section>
    </section>
<script>
    $(function() {
        var elem = document.getElementById('mySwipe');
        window.mySwipe = Swipe(elem, {
            startSlide: 0,
            speed: 500,
            auto: 5000,
            continuous: true,
            disableScroll: true,
            stopPropagation: false,
            callback: function(index, element) {
                var i = bullets.length;
                while (i--) {
                    bullets[i].className = ' ';
                }
                bullets[index].className = 'on';
            },
            transitionEnd: function(index, element) {},
            getPos: function(index, element) {
                alert(index);
            }

        });
        var bullets = document.getElementById('position').getElementsByTagName('li');
        bullets[0].className = 'on';
    });
</script>
{include file="./inc/footer.html"} 
