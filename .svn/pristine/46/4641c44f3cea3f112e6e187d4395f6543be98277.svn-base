<div class="deal_list_box wrap_full2 f_l">	
	{if $deal_list}
	<ul class="deal_list clearfix">
		{foreach from=$deal_list item=deal}
			<li>
				<div class="deal_item deal_item_border">
					<div class="deal_img">
						<div class="tags">					
						{foreach from=$deal.deal_tags item=tag}				
						<h2 class="tag{$tag}"></h2>
						{/foreach}
						</div>	
						<a href="{$deal.url}" class="img"><img lazy="true" src="{function name="get_spec_image" v=$deal.icon w=296 h=200 g=1}" /></a>
						{if $deal.brief}
						<a href="{$deal.url}" class="quan">
							{$deal.brief}
						</a>
						{/if}
					</div><!--团购图片-->
					<div class="deal_name">
						<a href="{$deal.url}">{$deal.sub_name}</a>
					</div>
					<div class="deal_brief">
							<a href="{$deal.url}">
							{$deal.name}
							</a>
					</div>
					<div class="deal_price">
						<span class="current_price"><i>&yen;</i>{function name="round" v=$deal.current_price l=2}</span>
						<span class="origin_price">门店价：&yen;{function name="round" v=$deal.origin_price l=2}</span>
					</div>
					<div class="deal_extra">
						<div class="sale_count">
							已售<span>{$deal.buy_count}</span>
						</div>
						<div class="sale_review">							
				        	<span>
								<input class="ui-starbar" value="{$deal.avg_point}" disabled="true"  />
							</span>
							</span>
							<span class="review_count"><i>{$deal.dp_count}</i>人点评</span>						
						</div>
					</div>
				</div><!--end deal_item-->
			</li>
			
			
			{/foreach}
		</ul>

		<div class="pages">{$pages}</div>
		<div class="blank"></div>
		{else}
		<div class="empty_tip">没有数据</div>
		{/if}
</div><!--end deal_list_box-->
