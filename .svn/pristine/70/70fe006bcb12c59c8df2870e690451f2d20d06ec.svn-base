.black_overlay {  
    display: none;  
    position: absolute;  
    top: 0%;  
    left: 0%;  
    width: 100%;  
    height: 100%;  
    background-color: black;  
    z-index: 1001;  
    -moz-opacity: 0.8;  
    opacity: .80;  
    filter: alpha(opacity = 80);  
}  
  
.white_content {  
    display: none;  
    position: absolute;  
    top: 25%;  
    left: 25%;  
    width: 100%;  
    height: 100%;  
    padding: 16px;  
    /**  
    border: 16px solid orange;  
    **/  
    
    z-index: 1002;  
    overflow: auto;  
}  
.p-10 {
	padding: 10px;
}
form {
	display: block;
	margin-top: 0em;
}
.form-nodt dt {
	display: none;
}
.form dt {
	float: left;
	width: 50px;
	line-height: 38px;
	clear: both;
}
.form dd {
	overflow: hidden;
	line-height: 38px;
	margin-bottom: 8px;
}
.input-common {
	width: 100%;
	padding: 0 10px;
	height: 46px;
	font-size: 16px;
	border-radius: 5px;
	border: 1px #ccc solid;
	background: #fff;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
}
.form dd em {
	font-size: 12px;
	padding-top: 6px;
	display: block;
	color: #999;
	line-height: 1.4em;
}
button.btn-block{
	width: 100%;
}
.btn-block {
	display: block;
	line-height: 46px;
	padding: 0;
	margin: 10px 0;
	font-size: 20px;
	background: #a11d58;
	border: 1px solid #a11d58;
	color: #FFF;
}