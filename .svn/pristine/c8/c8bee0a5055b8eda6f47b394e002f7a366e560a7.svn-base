@CHARSET "UTF-8";


/* 详情导航 */
.show-nav{ border:@border_color solid 1px; background:#eee; height:40px; }
.show-nav ul li{ float:left; display:block; height:40px; line-height:40px; text-align:center; padding:0px 20px; cursor:pointer; font-size:14px; border-right:@border_color solid 1px; }
.show-nav ul li.active{ background:@main_color; color:#fff;}

.show-content{ background:@box_color;}

.fix-nav{	
	border-top:2px solid @main_color;
	position:fixed;
	top:0;
	text-align:center;	
	height:40px;
	_position:absolute;	
	z-index:100;
	
}
.fix-nav .show-nav{border-top:0px;}
.flow_btn{ margin-right:8px; float:right; margin-top:8px;}

.show-content .content_box .box_content{ padding:0 15px 15px 15px;}
.show-content .content_box .box_title{ font-size:16px; font-family:"微软雅黑"; font-weight:bolder; height:22px; line-height:22px; border-bottom:@border_color solid 2px; padding:15px; margin:15px 0px; }

.show-content .content_box .box_title .box_title_text{ float:left;}
.show-content .content_box .box_title .box_title_more{ float:right; font-size:12px;}
.show-content .content_box .box_title .box_title_more a{ color:@main_color;}
.show-content .content_box .box_title .box_title_more a:hover{ color:@dark_color;}
.show-content .content_box .nopadding{ padding:0px;}
.show-content .content_box .nomargin{ margin:0px;}


.data_list dl dt{ display:block; line-height:20px; font-weight:bolder;  border-bottom:@border_color solid 1px;}
.data_list dl dd{ display:block; border-bottom:@border_color solid 1px;}
.data_list dl span{ display:inline-block; *display:inline; *zoom:1; float:left; text-align:center;  padding:5px 0px; }
.data_list dl dt span{ font-weight:bolder; font-family:"微软雅黑";}

.data_list dl span.dl_img{ width:120px; }
.data_list dl span.dl_name{ width:450px; }
.data_list dl span.dl_youhui_name{ width:350px; }
.data_list dl span.dl_youhui_end_time{ width:200px;  }
.data_list dl span.dl_price{ width:100px; }
.data_list dl span.dl_salecount{ width:70px; }
.data_list dl dd span.dl_name{ text-align:left;}
.data_list dl dd span.dl_name h1,.data_list dl dd span.dl_name h2{ display:block;}
.data_list dl dd span.dl_name h1{ font-weight:normal; font-size:14px; line-height:30px; color:@main_color;  }
.data_list dl dd span.dl_name h2{ font-weight:normal; font-size:12px; }

.data_list dl dd span.dl_price{ padding:12px 0px;}
.data_list dl span.dl_price i{ display:block; line-height:25px;}
.data_list dl span.dl_price i,.data_list dl span.dl_price i font{ font-style:normal; }
.data_list dl span.dl_price i.origin{ text-decoration:line-through; font-size:14px; }
.data_list dl span.dl_price i.origin font{ font-size:12px; }
.data_list dl span.dl_price i.current{ color:@main_color; font-size:20px; font-family:verdana; }
.data_list dl span.dl_price i.current font{ font-size:12px;}

.data_list dl dd span.dl_salecount{ color:@main_color; font-size:16px; line-height:75px; }
.data_list dl dd span.dl_youhui_end_time{  line-height:75px;}


.store_info{ border:@border_color solid 1px; background:@box_color; padding:10px;
-moz-box-shadow: 2px 2px 2px #f0f0f0;/*firefox*/
-webkit-box-shadow: 2px 2px 2px #f0f0f0;/*safari或chrome*/
box-shadow:2px 2px 2px #f0f0f0;/*opera或ie9*/ 
}
.store_info i.iconfont{ color:#999;}
.show_img{ padding-right:20px; }
.show_img a{ width:100px; height:100px;  border:@border_color solid 1px; background:@box_color; display:block;  }
.show_img a span{ display:block; height:25px; line-height:25px; text-align:center; background:#f2f2f2;}
.show_name{ font-size:22px; line-height:36px; font-weight:bolder; font-family:"微软雅黑"; }

.show_address,.show_tel{ line-height:22px; padding:3px 0px;}
.show_detail{ width:650px;}

.store_dp{ font-size:12px;}
.store_dp div{ line-height:25px; }
.store_dp div.store_dp_avg{ height:20px; padding-top:10px; overflow:hidden;  line-height:0px;}
.store_dp em{ font-style:normal; color:@main_color; font-family:verdana; font-size:12px;}