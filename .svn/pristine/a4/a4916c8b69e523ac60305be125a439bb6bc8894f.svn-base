/*以上大体就是格式化部分，以下为主要，直接截取以下代码*/
/*本页主要样式*/
.login {
text-align: center;
padding: 10px;
font-size: 15px;
}

.login input {
height: 45px;
line-height: 45px;
border-radius: 5px;
padding: 0 10px;
border-width: 1px;
border-style:solid;
box-sizing: border-box;
-moz-box-sizing: border-box;
-webkit-box-sizing: border-box;
font-size:15px;
}
.login .logininput {
	width: 100%;
padding: 0 10px;
margin: 5px 0;
}
.login .ui-button_login {
height: 45px;
width: 100%;
margin: 5px 0;
text-align: center;
font-weight: bold;
cursor: pointer;
border:none;
font-size:18px;
}
.forgetpw {
padding-top: 10px;
line-height: 100%;
font-size: 13px;
color:@font_a;
}
.rgst {
padding-top: 10px;
line-height: 100%;
font-size: 13px;
color:@contrast_color;
}



.login .logininput_getcode {
width: 65%;
margin: 5px 2% 5px 0;
float: left;
}

.login .ui-button_getcode {
width: 30%;
height: 45px;
margin: 5px 0;
text-align: center;
float: right;
color: #fff;
cursor: pointer;
background:#ff7900;
}
.button_bg{
	background:#ff7900;
	color:#fff;
	display:block;
}
.border{
	border-color:#ddd;
}
.explain{
  color:#ff7900;
  line-height:20px;
  font-size:14px;
  padding:10px 0 0 10px;	
}
