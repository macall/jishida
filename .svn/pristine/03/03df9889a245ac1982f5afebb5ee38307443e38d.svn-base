{include file="./inc/header.html"}
<div class="wrap">
				<div class="hide_list">
					  <div class="abbr">
					  	   <div class="first_list">
					  	   	    <ul>
									{foreach from=$data.bcate_list item=cate }
									<li class="directory">{$cate.name}</li>
									{/foreach}
					  	   	    </ul>
					  	   </div>
						   <div class="second_list">
						   	{foreach from=$data.bcate_list item=cate}
						   	    <ul>
						   	    	{if $cate.id gt 0}
					  	   	    	<li class="two_directory"><a href="{$cate.url}" >全部</a></li>
									{/if}
									{foreach from=$cate.bcate_type item=blist}
									<li class="two_directory"><a href="{$blist.url}">{$blist.name}</a></li>
									{/foreach}
					  	   	    </ul>
								{/foreach}
						   </div>
					  </div>
					  <div class="abbr">
					  	   <div class="first_list">
					  	   	    <ul>
					  	   	    	
									{foreach from=$data.quan_list item=quan key=key}
									<li class="directory">{$quan.name}</li>
									{/foreach}
					  	   	    </ul>
					  	   </div>
						   <div class="second_list">
						   	{foreach from=$data.quan_list item=quan }
						   	    <ul>
						   	    	{if $quan.id gt 0}
					  	   	    	<li class="two_directory"><a href="{$quan.url}">全部</a></li>
									{/if}
									{foreach from=$quan.quan_sub item=qlist}
									<li class="two_directory"><a href="{$qlist.url}">{$qlist.name}</a></li>
									{/foreach}
									
					  	   	    </ul>
								{/foreach}
						   </div>
					  </div>
					  <div class="abbr">
					  	   <div class="first_list">
					  	   	    <ul>
									{foreach from=$data.ordertype item=navs}
										<li class="directory"><a href="{$navs.url}">{$navs.name}</a></li>
									{/foreach}
								</ul>
					  	   </div>
					  </div>
				</div>
					 <div class="main_list">
					 	   <ul class="mall-cate">
					 	   	   <li>
					 	   	   	    {if $request.catename}{$request.catename}{else}全部分类 {/if}<i class="fa fa-sort-desc"></i>
					 	   	   </li>
							   <li>
					 	   	   	{if $request.quanname}{$request.quanname}{else}全城 {/if}<i class="fa fa-sort-desc"></i>
					 	   	   </li>
							   <li>
					 	   	   	  {if $request.order_type eq price_asc}价格最低
								  {elseif $request.order_type eq newest}最新发布
								  {elseif $request.order_type eq buy_count}销量最高
								  {elseif $request.order_type eq price_desc}价格最高
								  {else}默认排序
								  {/if}
								  <i class="fa fa-sort-desc"></i>
					 	   	   </li>
					 	   </ul>
					 </div>
				
				<div class="content back-white">
					<div class="list-view bor_none">
						 <ul class="tuan_ul">
						 	{foreach from=$data.item item=tuanlist}
						 	<li class="tuan_li">
						 	     <a href="{wap_url a="index" r="goodsdesc#index" p="id=$tuanlist.id"}">
						 	     	<div class="list_item">
						 	     		 <div class="pic">
						 	     		 	<img src="{$tuanlist.icon}" width="140" height="85">
											{if $tuanlist.auto_order eq 1}<i class="tuan_ico order">免预约</i>{/if}
						 	     		 </div>
										 <div class="info">
										 	<h2>{$tuanlist.sub_name}</h2>
											<h3> {$tuanlist.goods_brief}</h3>
											<div class="tuan_price">
						                         <p class="price">
						                         	 <em>{$tuanlist.current_price}<i>元</i></em>
													 <del>{$tuanlist.origin_price}元</del>
												 </p>
						                         <p class="bought"><i></i>已售{$tuanlist.buy_count}</p>
						                     </div>
										 </div>
						 	     	</div>
						 	     </a>
						 	</li>
							{/foreach}
							
						 </ul>
						 
					</div>
					</div>
{include file="./inc/footer.html"} 
