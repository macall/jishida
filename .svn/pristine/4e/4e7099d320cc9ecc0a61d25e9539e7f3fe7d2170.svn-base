@CHARSET "UTF-8";
.payment{ border-top:@main_color 2px solid;}
.payment .title{ text-align:center;}

.red{ color:@main_color; font-size:14px; font-weight:bolder; font-family:verdana;}
.payment .order-check-form{padding: 20px 0pt; text-align: center;}
.payment .payment_code{ padding: 20px 0pt; text-align: center;}

.payment_done{ padding:30px 60px;}
.payment_done h2{ display:block; text-align:center; font-size:16px; font-weight:bolder;}
.payment_done .group-bond{ width:360px; line-height:25px; margin:10px auto; border:@main_color dotted 1px; background:@light_color; padding:15px;}
.payment_done .group-bond .bond_title h3{ font-size:16px; font-family:"微软雅黑"; color:#000; }
.payment_done .group-bond a{ color:@main_color; font-size:14px; font-weight:bolder;}

.goods-info{ padding:5px; line-height:25px; }
.goods-info a{ color:@main_color;}


.payment_done .group-bond a.lottery_invite{
	font-size:12px; font-weight:normal;
}
