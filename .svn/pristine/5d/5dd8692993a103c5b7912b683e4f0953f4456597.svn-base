{include file="inc/header.html"}

<div class="blank20"></div>

<div class="{function name="load_wrap" t=$wrap_type} clearfix">
	<div class="side_nav left_box">
		{include file="inc/uc_nav_list.html"}
	</div>
	<div class="right_box">
		
		<div class="main_box">
			<div class="content">
				<div class="title"><span>我的消息</span></div>
				<div class="blank20"></div>
				
			</div>
			{if $list}
			{foreach from=$list item=msg}
			<div class="msg_row clearfix">
				<div class="msg_icon f_l">
					{if $msg.icon}
						{if $msg.link}<a href="{$msg.link}" title="{$msg.title}" target="_blank">{/if}					
						<img src="{function name="get_spec_image" v=$msg.icon w=50 h=50 g=1}" />
