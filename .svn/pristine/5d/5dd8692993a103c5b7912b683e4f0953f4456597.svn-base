					{else}
					<i class="iconfont">&#xe62c;</i>
					{/if}
				</div>
				<div class="msg_main f_r">
					<div class="msg_title">
						<span class="title">
						{if $msg.is_read eq 0}<i class="iconfont new_msg">&#xe636;</i>{/if}
						{if $msg.title}
							{if $msg.link}<a href="{$msg.link}" title="{$msg.title}" target="_blank">{/if}
								{$msg.short_title}
							{if $msg.link}</a>{/if}	
						{/if}
						</span>
						<span class="pub_date"><i class="iconfont">&#xe621;</i> {$msg.create_time}</span>
					</div>
					<div class="msg_content">
						<div class="content">{$msg.content}</div>
						<div class="op">
							<a href="javascript:void(0);" action="{url x="index" r="uc_msg#remove_msg" p="id=$msg.id"}"><i class="iconfont">&#xe62f;</i></a>
						</div>
					</div>
				</div>
			</div>
			{/foreach}
			<div class="blank"></div>
			<div class="pages">{$pages}</div>
			{else}
			<div class="empty_tip">没有消息记录</div>
			{/if}
		</div>
	</div>	
