/*merchantitem_index.html*/
	.alert_block_tx{
		width:100%;
		height:100%;
		background: #000;
        filter: alpha(Opacity=80);
		-moz-opacity: 0.5;
		opacity: 0.5;
		z-index:100;
		position: absolute;
		top:0;
	}	
	.alert_text_tx{
		width:228px;
		background:#fff;
		margin:0 auto;
		border-radius:10px;
		z-index:1000;
		position:relative;
		overflow: hidden;
	}		
	.cover_tx{
		padding-top:80px;
		position:absolute;
		width:100%;
		height:100%;
		top: 0px;
		/*display:none;*/
	}		
	.alert_text_tx  h3{
		font-size:13px;
		color:#424242;
		text-align:center;
		line-height:30px;
		font-weight: bold;
	}		
	.alert_text_tx p{
		font-size:12px;
		color:#424242;
		line-height:15px;
		padding:0 10px 10px 10px;
	}					
	.import_tx{
		border-bottom:1px solid #d5d3d3;
		border-top:1px solid #d5d3d3;
		text-align:center;
		padding:15px 0;
	}
	.import_tx span{
		display:inline-block;
		font-size:12px;
		color:#424242;
		line-height:12px;
	}
	.import_tx div{
		display:inline-block;
		width:62px;
		height:25px;
		border:1px solid #d5d3d3;
		border-radius:5px;
	}
	.import_tx div input{
		width:100%;
		height:100%;
		border-radius:5px;
		background:none;
		font-size:13px;
		color:#d5d3d3;
	}
	.button_tx .sure_tx{
		width:49%;
		display:inline-block;
		
	}
	.button_tx .sure_tx .block_tx{
		background:#fc8600;
		margin-right:12.5px;
		float: right;
	}
	.button_tx .cancel_tx{
		width:49%;
		display:inline-block;
	   
	}
	
	.button_tx .cancel_tx .block_tx{
		 margin-left:12.5px;
	     background:#ed3130;
		float:left;
		 
	}
	
	.block_tx button{
		width:100%;
		height:100%;
		border:none;
		background:none;
		text-align:center;
		line-height:100%;
		color:#fff;
	}  
	.block_tx{
		
		width:68px;
		height:28px;
		border-radius:20px;
	}
	.button_tx{
		padding:15px 0;
		height:28px;
	}
	.business_display,.business_tuan_display,.business_goods_display,.business_youhui_display{
		display:none;
	}
	.business_blank,.business_tuan_blank{
	display:-webkit-box;
	}
